# Kudileya Chat Navigator - Environment Configuration

# ==============================================
# API Configuration
# ==============================================

# Primary API Base URL (Development)
VITE_API_BASE_URL=http://localhost:3000

# Production API Base URL (Render.com deployment)
VITE_API_PROD_URL=https://kudileya-app-backend.onrender.com

# API Timeout Configuration (in milliseconds)
VITE_API_TIMEOUT=10000

# API Retry Configuration
VITE_API_RETRY_COUNT=2

# API Cache Configuration (in milliseconds)
VITE_API_CACHE_TIME=300000

# ==============================================
# Contact Information
# ==============================================

# WhatsApp Contact Number (with country code, no spaces)
VITE_WHATSAPP_NUMBER=924643714

# WhatsApp Message Template for Contact
VITE_WHATSAPP_MESSAGE="Olá! Gostaria de saber mais sobre os serviços da Kudileya."

# Support Email
VITE_SUPPORT_EMAIL=contato@kudileya.com

# Company Website
VITE_COMPANY_WEBSITE=https://kudileya.com

# ==============================================
# Feature Flags
# ==============================================

# Enable/Disable Development Mode
VITE_DEV_MODE=true

# Enable API Debugging (console.log statements)
VITE_DEBUG_API=true

# Enable WhatsApp Contact Button
VITE_ENABLE_WHATSAPP=true

# Enable Map Feature  
VITE_ENABLE_MAP=true

# Enable Documents Feature
VITE_ENABLE_DOCUMENTS=true

# ==============================================
# External Services
# ==============================================

# Google Maps API Key (for LawyersMap component)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Analytics Tracking ID (Google Analytics, etc.)
VITE_ANALYTICS_ID=

# ==============================================
# UI/UX Configuration  
# ==============================================

# Default Language (pt | en)
VITE_DEFAULT_LANGUAGE=pt

# Default Theme (light | dark)
VITE_DEFAULT_THEME=light

# Brand Primary Color (hex)
VITE_BRAND_PRIMARY_COLOR=#F0A22E

# WhatsApp Button Color (hex)  
VITE_WHATSAPP_COLOR=#25D366

# Enable Animations
VITE_ENABLE_ANIMATIONS=true

# ==============================================
# Document Upload Configuration
# ==============================================

# Maximum file size for uploads (in bytes)
VITE_MAX_FILE_SIZE=50000000

# Allowed file types for upload
VITE_ALLOWED_FILE_TYPES=application/pdf

# Documents per page for pagination
VITE_DOCS_PER_PAGE=12

# ==============================================
# Security Configuration
# ==============================================

# API Rate Limiting (requests per minute)
VITE_API_RATE_LIMIT=60

# Enable HTTPS Only (production)
VITE_FORCE_HTTPS=false

# ==============================================
# Development Configuration
# ==============================================

# Show Error Details in UI (development only)
VITE_SHOW_ERROR_DETAILS=true

# Enable React Query DevTools
VITE_ENABLE_DEVTOOLS=true

# Mock API Responses (for testing)
VITE_MOCK_API=false